<h1>Reset Password</h1>

<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @user, url: password_reset_path(params[:id]), method: :patch) do |f| %>
    <p>Enter your new password below:</p>

    <div class="form-group mt-3">
        <%= f.label :password %>
        <%= f.password_field :password, required: true, class: "form-control" %>
        <div class="form-text">
            Your password must be at least 6 characters long, contain at least one upper case letter, one lower case letter, and one number.
        </div>
    </div>

    <div class="form-group mt-3">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, required: true, class: "form-control" %>
    </div>

    <div class="actions">
    <%= f.submit 'Reset Password', class: "btn btn-primary mt-3" %>
    </div>
<% end %>