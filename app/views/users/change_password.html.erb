<h1>Change Password</h1>

<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

    <%= form_with url: update_password_user_path, method: :patch do |f| %>
        <div class="form-group mt-3">
            <%= f.label :current_password %>
            <%= f.password_field :current_password, class: "form-control" %>
        </div>
        <div class="form-group mt-3">
            <%= f.label :new_password %>
            <%= f.password_field :new_password, class: "form-control" %>
            <div class="form-text">
              Your password must be at least 6 characters long, contain at least one upper case letter, one lower case letter, and one number.
            </div>
        </div>
        <div class="form-group mt-3">
            <%= f.label :new_password_confirmation %>
            <%= f.password_field :new_password_confirmation, class: "form-control" %>
        </div>
    <%= f.submit "Change Password", class: "btn btn-danger mt-3" %>
    <% end %>